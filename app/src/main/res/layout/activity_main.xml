<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" "
        android:layout_weight="1"
        android:layout_margin="10dp"
       android:background="#8D7BAC"
        android:ems="10"
        android:textColor="@color/white"
        android:gravity="right|center"
        android:textSize="35pt" />

    <TableLayout
        android:id="@+id/tlTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="10dp"
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt"
            >

            <Button
                android:id="@+id/number_7"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:text="7"
                android:textSize="30dp"
                android:layout_marginRight="2pt"
                android:background="@color/blueback"
                android:textColor="@color/white"
                />

            <Button
                android:id="@+id/number_8"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:text="8"
                android:textSize="30dp"
                android:layout_marginRight="2pt"
                android:background="@color/blueback"
                android:textColor="@color/white"
                />

            <Button
                android:id="@+id/number_9"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_marginRight="2pt"
                android:text="9"
                android:textSize="30dp"
                android:background="@color/blueback"
                android:textColor="@color/white"
                />
            <Button
                android:id="@+id/divide_btn"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:text="/"
                android:textSize="30dp"
                android:layout_marginRight="2pt"
                android:background="@color/blueback"
                android:textColor="@color/white"
                />
            </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt"

            >
            <Button
                android:id="@+id/number_4"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:text="4"
                android:textSize="30dp"
                android:layout_marginRight="2pt"
                android:background="@color/blueback"
                android:textColor="@color/white"
                />
            <Button
                android:id="@+id/number_5"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:text="5"
                android:textSize="30dp"
                android:layout_marginRight="2pt"
                android:background="@color/blueback"
                android:textColor="@color/white"
                />
            <Button
                android:id="@+id/number_6"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_marginRight="2pt"
                android:text="6"
                android:textSize="30dp"
                android:background="@color/blueback"
                android:textColor="@color/white"
                />
            <Button
                android:id="@+id/multiply_btn"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:text="*"
                android:textSize="30dp"
                android:layout_marginRight="2pt"
                android:background="@color/blueback"
                android:textColor="@color/white"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt"
            >

            <Button
                android:id="@+id/number_1"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:text="1"
                android:textSize="30dp"
                android:layout_marginRight="2pt"
                android:background="@color/blueback"
                android:textColor="@color/white"
                />
            <Button
                android:id="@+id/number_2"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:text="2"
                android:textSize="30dp"
                android:layout_marginRight="2pt"
                android:background="@color/blueback"
                android:textColor="@color/white"
                />
            <Button
                android:id="@+id/number_3"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:text="3"
                android:textSize="30dp"
                android:layout_marginRight="2pt"
                android:background="@color/blueback"
                android:textColor="@color/white"
                />
            <Button
                android:id="@+id/sub_bnt"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:text="-"
                android:textSize="30dp"
                android:layout_marginRight="2pt"
                android:background="@color/blueback"
                android:textColor="@color/white"
                />


    </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt"
            >


            <Button
                android:id="@+id/plusandsub_btn"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:text="+/-"
                android:textSize="30dp"
                android:layout_marginRight="2pt"
                android:background="@color/blueback"
                android:textColor="@color/white"
                />
            <Button
                android:id="@+id/number_0"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:text="0"
                android:textSize="30dp"
                android:layout_marginRight="2pt"
                android:background="@color/blueback"
                android:textColor="@color/white"
                />
            <Button
                android:id="@+id/dot_btn"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:text="."
                android:textSize="30dp"
                android:layout_marginRight="2pt"
                android:background="@color/blueback"
                android:textColor="@color/white"
                />
            <Button
                android:id="@+id/plus_bnt"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:text="+"
                android:textSize="30dp"
                android:layout_marginRight="2pt"
                android:background="@color/blueback"
                android:textColor="@color/white"
                />

</TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt"

            >
            <Button
                android:id="@+id/del_bnt"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:text="DEL"
                android:textSize="30dp"
                android:layout_marginRight="2pt"
                android:background="@color/blueback"
                android:textColor="@color/white"
                />
            <Button
                android:id="@+id/clear_btn"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:text="c"
                android:textSize="30dp"
                android:layout_marginRight="2pt"
                android:background="@color/blueback"
                android:textColor="@color/white"
                />
            <Button
                android:id="@+id/equal_btn"
                android:layout_weight="1"
                android:layout_width="48pt"
                android:layout_height="40pt"
                android:text="="
                android:textSize="30dp"
                android:layout_marginRight="2pt"
                android:background="@color/blueback"
                android:textColor="@color/white"
                />


        </TableRow>


    </TableLayout>


</LinearLayout>